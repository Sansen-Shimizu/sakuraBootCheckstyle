<?xml version="1.0"?>

<!DOCTYPE suppressions PUBLIC
    "-//Checkstyle//DTD SuppressionXpathFilter Experimental Configuration 1.2//EN"
    "https://checkstyle.org/dtds/suppressions_1_2_xpath_experimental.dtd">

<suppressions>
    <suppress-xpath checks="HideUtilityClassConstructor" query="//CLASS_DEF[.//ANNOTATION/IDENT[@text='SpringBootApplication']]"/>
    <suppress-xpath checks="HiddenField" query="//CLASS_DEF[..//CLASS_DEF[./IDENT[matches(@text, '.*Builder$')]]]//*"/>
    <suppress-xpath checks="IllegalThrows" query="//CLASS_DEF[./IDENT[matches(@text, '.*Test$')]]//*"/>
    <suppress-xpath checks="IllegalThrows" query="//INTERFACE_DEF[./IDENT[matches(@text, '.*Test$')]]//*"/>
</suppressions>